# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x86
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x86)
  inih_config = debug_x86
  Invaders_config = debug_x86
endif
ifeq ($(config),debug_x86_64)
  inih_config = debug_x86_64
  Invaders_config = debug_x86_64
endif
ifeq ($(config),release_x86)
  inih_config = release_x86
  Invaders_config = release_x86
endif
ifeq ($(config),release_x86_64)
  inih_config = release_x86_64
  Invaders_config = release_x86_64
endif

PROJECTS := inih Invaders

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

inih:
ifneq (,$(inih_config))
	@echo "==== Building inih ($(inih_config)) ===="
	@${MAKE} --no-print-directory -C . -f inih.make config=$(inih_config)
endif

Invaders: inih
ifneq (,$(Invaders_config))
	@echo "==== Building Invaders ($(Invaders_config)) ===="
	@${MAKE} --no-print-directory -C . -f Invaders.make config=$(Invaders_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f inih.make clean
	@${MAKE} --no-print-directory -C . -f Invaders.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x86"
	@echo "  debug_x86_64"
	@echo "  release_x86"
	@echo "  release_x86_64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   inih"
	@echo "   Invaders"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"